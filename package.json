{
  "name": "mendix-hybrid-app-template",
  "version": "v1.1.0",
  "description": "Mendix PhoneGap Build app template",
  "scripts": {
    "init": "node init",
    "install": "node init && node ./node_modules/webpack/bin/webpack",
    "pgpackage": "node ./node_modules/webpack/bin/webpack",
    "pgwatch": "node ./node_modules/webpack/bin/webpack --watch",
    "pgplatform": "cd build && phonegap platforms",
    "pgplugin": "cd build && phonegap plugin",
    "pgprepare": "cd build && phonegap prepare",
    "pgcompile": "cd build && phonegap compile",
    "pgbuild": "cd build && phonegap build",
    "pgrunapp": "cd build && phonegap run",
    "pgremote": "cd build && phonegap remote run",
    "pglogin": "cd build && phonegap remote login",
    "pglogout": "cd build && phonegap remote logout"
  },
  "main": "src/www/scripts/entry.js",
  "directories": {
    "lib": "src"
  },
  "files": [
    "config",
    "src",
    "*.js",
    "yarn.lock",
    "package-lock.json",
    "README.md"
  ],
  "dependencies": {
    "global": "^4.3.2",
    "mendix-hybrid-app-base": "^1.1.0"
  },
  "devDependencies": {
    "phonegap": "^6.5.0",
    "shelljs": "^0.7.7",
    "webpack": "^3.4.1",
    "webpack-merge": "^4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:mendix/hybrid-app-template.git"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Kevin Vlaanderen",
    "email": "kevin.vlaanderen@mendix.com",
    "url": "https://developer.mendixcloud.com/link/profile/15218"
  }
}