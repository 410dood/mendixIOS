{
  "name": "mendix-hybrid-app-template",
  "version": "v0.0.1",
  "description": "Mendix PhoneGap Build app template",
  "scripts": {
    "install": "webpack",
    "package": "webpack",
    "watch": "webpack --watch",
    "build-android": "cd build && phonegap build android",
    "build-ios": "cd build && phonegap build ios",
    "run-android": "cd build && phonegap run android",
    "run-ios": "cd build && phonegap run ios",
    "phonegap-login": "cd build && phonegap remote login",
    "phonegap-logout": "cd build && phonegap remote logout",
    "remote-run-android": "cd build && phonegap remote run android",
    "remote-run-ios": "cd build && phonegap remote run ios"
  },
  "main": "src/www/scripts/entry.js",
  "directories": {
    "lib": "src"
  },
  "files": [
    "config",
    "src",
    "*.js",
    "yarn.lock",
    "README.md"
  ],
  "dependencies": {
    "mendix-hybrid-app-base": "^0.0.1"
  },
  "devDependencies": {
    "webpack-merge": "^4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:mendix/hybrid-app-template.git"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Kevin Vlaanderen",
    "email": "kevin.vlaanderen@mendix.com",
    "url": "https://developer.mendixcloud.com/link/profile/15218"
  }
}
