{
  "name": "mendix-hybrid-app-template",
  "version": "1.1.1",
  "description": "Mendix PhoneGap Build app template",
  "scripts": {
    "init": "node init",
    "install": "node init && node ./node_modules/webpack/bin/webpack",
    "package": "node ./node_modules/webpack/bin/webpack",
    "watch": "node ./node_modules/webpack/bin/webpack --watch",
    "platform": "cd build && phonegap platforms",
    "plugin": "cd build && phonegap plugin",
    "prepare": "cd build && phonegap prepare",
    "compile": "cd build && phonegap compile",
    "build": "cd build && phonegap build",
    "run": "cd build && phonegap run",
    "remote": "cd build && phonegap remote run",
    "phonegap-login": "cd build && phonegap remote login",
    "phonegap-logout": "cd build && phonegap remote logout"
  },
  "main": "src/www/scripts/entry.js",
  "directories": {
    "lib": "src"
  },
  "files": [
    "config",
    "src",
    "*.js",
    "yarn.lock",
    "package-lock.json",
    "README.md"
  ],
  "dependencies": {
    "uglify-js": "^2.8.28",
    "mendix-hybrid-app-base": "^1.1.0"
  },
  "devDependencies": {
    "phonegap": "^6.5.0",
    "shelljs": "^0.7.7",
    "webpack": "^2.2.1",
    "webpack-merge": "^4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:mendix/hybrid-app-template.git"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Kevin Vlaanderen",
    "email": "kevin.vlaanderen@mendix.com",
    "url": "https://developer.mendixcloud.com/link/profile/15218"
  }
}
